# Following the vignette from RcppGSL
# set by configure
GSL_CFLAGS = @GSL_CFLAGS@
GSL_LIBS = @GSL_LIBS@

# combine to standard arguments for R
PKG_CXXFLAGS = $(GSL_CFLAGS) -I. $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(GSL_LIBS) $(SHLIB_OPENMP_CXXFLAGS)

